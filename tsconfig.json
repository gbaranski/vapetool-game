{
    "compilerOptions": {
      "module": "commonjs",
      "jsx": "preserve",
      "esModuleInterop": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }